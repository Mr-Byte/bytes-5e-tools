{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "ES6", "ES2017", "ES2018"],
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist/",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["@league-of-foundry-developers/foundry-vtt-types"],
    "newLine": "lf",
    "skipLibCheck": true
  },
  "exclude": ["dist/**/*.js"],
  "include": ["src/**/*.ts"]
}
